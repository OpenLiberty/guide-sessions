<server description="Liberty Server for Sessions Management">

    <featureManager>
        <feature>servlet-4.0</feature>
        <!-- tag::sessionCache[] -->
        <feature>sessionCache-1.0</feature>
        <!-- end::sessionCache[] -->
        <feature>jaxrs-2.1</feature>
        <feature>jsonp-1.1</feature>
        <feature>mpOpenAPI-1.1</feature>
    </featureManager>

    <httpEndpoint httpPort="${default.http.port}" httpsPort="${default.https.port}"
        id="defaultHttpEndpoint" host="*" />
    <!-- tag::httpSessionCache[] -->
    <httpSessionCache libraryRef="jCacheVendorLib"
        uri="file:${shared.config.dir}/hazelcast-config.xml" />
    <!-- end::httpSessionCache[] -->
    <!-- tag::library[] -->
    <library id="jCacheVendorLib">
    	  <!-- tag::hazelcastjar[] -->
        <file name="${shared.resource.dir}/hazelcast.jar" />
        <!-- end::hazelcastjar[] -->
    </library>
    <!-- end::library[] -->

    <httpSessionCache libraryRef="jCacheVendorLib"
                    uri="file:${shared.resource.dir}/hazelcast/hazelcast.xml"/>
    <!-- tag::cloneID[] -->
    <httpSession cloneId="${cloneId}"/>
    <!-- end::cloneID[] -->
    <application location="${shared.app.dir}/test.ear"/>

    <webApplication location="cart-app.war" contextRoot="${app.context.root}" />

</server>
